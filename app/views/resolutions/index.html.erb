<div class="container-fluid">
  <% if @name == 'ankit' %>
    <h2 class="text-center p-3 text-uppercase">Ankit Lists</h2>
  <% else %>
    <h2 class="text-center p-3 text-uppercase">Vinayak Lists</h2>
  <% end %>
  <div class="table-responsive text-center">
    <table class="table table-striped table-hover border border-dark">
      <thead>
        <tr>
          <% if @name == 'ankit' %>
            <th>Date</th>
            <th>Coaching</th>
            <th>Program</th>
            <th>Speaking</th>
            <th>Project</th>
            <th>Words</th>
          <% else %>
            <th>Date</th>
            <th>Gym</th>
            <th>Fruit</th>
            <th>Gren Tea</th>
            <th>No Junk Food</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @resolutions.each do |resolution| %>
          <tr>
            <% if @name == 'ankit' %>
              <td><%= resolution.date %></td>
              <td><%= resolution.coaching %></td>
              <td><%= resolution.program %></td>
              <td><%= resolution.speaking %></td>
              <td><%= resolution.project %></td>
              <td><%= resolution.words %></td>
            <% else %>
              <td><%= resolution.date %></td>
              <td><%= resolution.gym %></td>
              <td><%= resolution.fruit %></td>
              <td><%= resolution.green_tea %></td>
              <td><%= resolution.no_junk_food %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
